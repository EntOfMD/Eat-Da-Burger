<div class="container">
    <div class="jumbotron mt-3 rounded">
        <div class="row justify-content-center">
            <div class="col-md-12 text-center">
                <img id="main-gif" src="/assets/img/BouncingBuger.gif" alt="animated bouncing burger">
                <br />
                <p class="lead display-1" id="Active">Eat Da Burger!</p>
                <p class="h4">GET IN MA BELLY!</p>
            </div>
        </div>
        <div class="row">
            <div class="col-md-6 text-center">
                <div class="row p-3 ">
                    {{#each data}}
                    {{#unless this.devoured}}
                    <div class="col-md-9 text-center mt-2" id="{{this.id}}">
                        {{this.id}}. {{this.burger_name}}
                    </div>
                    <div class="col-md-3 text-left">
                        <form action="/app/update?_method=PUT" method="POST">
                            <input type="hidden" type="text" autocomplete="off" name="id" value={{this.id}}>
                            <button type="submit" class="btn btn-warning mb-1 rounded">CRUSH IT!</button>
                        </form>
                    </div>
                    {{/unless}}
                    {{/each}}
                </div>
            </div>
            <div class="col-md-6 text-center">
                {{#each data}}
                {{#if this.devoured}}
                <div class="list-group-item list-group-item-action disabled"><i
                        class="fas fa-greater-than text-dark"></i>
                    <span class="text-success">{{this.burger_name}}</span> has been
                    <span class="text-danger"> crushed!</span>

                </div>
                {{/if}}
                {{/each}}
            </div>
        </div>
        <div class="row justify-content-center m-3" id="addBtn">
            <div class="col-md-6 text-center">
                <form action="/app/addBurger?_method=POST" method="POST">
                    <input type="text" name="burger_name" autocomplete="off" placeholder="Type the burger name here"
                        class="form-control">
                    <button type="submit" class="btn btn-danger m-2">Add a Burger! <i
                            class="fas fa-hamburger"></i></button>
                    <small class="form-text text-muted">Or press the button, it'll create a name for you! *Any names
                        with '!' is auto-generated*</small>
                </form>
            </div>
        </div>
    </div>
</div>
